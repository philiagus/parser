{
    "name": "philiagus/parser",
    "description": "PHP converter classes for asserting, parsing and converting of inputs.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "parse",
        "sanitize"
    ],
    "authors": [
        {
            "name": "Andreas Bittner",
            "email": "philiagus@philiagus.de",
            "role": "lead"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "support": {
        "issues": "https://github.com/philiagus/parser/issues"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "ext-xdebug": "*",
        "philiagus/dataprovider": "*"
    },
    "autoload": {
        "psr-4": {
            "Philiagus\\Parser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Philiagus\\Parser\\Test\\Unit\\": "tests/Unit",
            "Philiagus\\Parser\\Test\\Integration\\": "tests/Integration",
            "Philiagus\\Parser\\Test\\" : "tests/"
        }
    }
}
